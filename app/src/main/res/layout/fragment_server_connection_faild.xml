<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:id="@+id/fragment_server_connection_faild">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textFaild"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:text="@string/connecting_server_fail" />

    <Button
        android:id="@+id/retryDownload"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@drawable/splash_button_style"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textFaild"
        android:text="@string/tryAgain"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>