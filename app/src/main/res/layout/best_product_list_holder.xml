<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="150dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/best_product_row_card"
    android:layout_marginLeft="@dimen/cardview_padding_left"
    android:layout_marginRight="@dimen/cardview_padding_right"
    android:layout_marginTop="@dimen/cardview_padding_top"
    android:layout_marginBottom="@dimen/cardview_padding_bottom"
    card_view:cardCornerRadius="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:id="@+id/best_product_name_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/best_product_image_holder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_gridView_height"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_background"
            android:transitionName="@string/plant_image_holder_transition"
            />

        <LinearLayout
            android:id="@+id/best_product_main_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:transitionName="@string/plant_name_holder_transition"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/best_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="8dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/md_black_1000"/>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/item_selected_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/best_product_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:layout_marginLeft="8dp"
                    android:layout_margin="4dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/md_black_1000"/>
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>